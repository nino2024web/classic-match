<% content_for :body_bg, 'bg-stone-700' %>
<main class="min-h-dvh flex items-start justify-center px-4 py-10">
  <div class="w-full max-w-md">
    <div class="w-full rounded-3xl overflow-hidden shadow-xl ring-1 ring-black/5 bg-white/95">
      <div class="relative">
        <%= image_tag "auth/login-header.jpg",
              alt: "",
              class: "block w-full h-40 sm:h-56 md:h-64 object-cover object-center select-none",
              loading: "eager", fetchpriority: "high" %>
      </div>

      <div class="px-6 pt-6 pb-2 text-center">
        <h1 class="text-3xl font-extrabold tracking-tight text-slate-900">ログイン</h1>
        <p class="mt-3 text-slate-600">保存した作曲家や曲の候補を引き継げます。</p>
      </div>

      <div class="px-6 pb-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                    class: "mt-1 block w-full rounded-xl border border-slate-300 px-4 py-3 text-[16px] placeholder-slate-400 focus:border-slate-400 focus:outline-none focus:ring-4 focus:ring-slate-200" %>
            </div>

            <div>
              <%= f.label :password, "パスワード", class: "block text-sm font-medium text-slate-700" %>
              <%= f.password_field :password, autocomplete: "current-password",
                    class: "mt-1 block w-full rounded-xl border border-slate-300 px-4 py-3 text-[16px] placeholder-slate-400 focus:border-slate-400 focus:outline-none focus:ring-4 focus:ring-slate-200" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="flex items-center gap-2 pt-1">
                <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-slate-300 text-slate-900 focus:ring-slate-300" %>
                <%= f.label :remember_me, "ログイン状態を保持", class: "text-sm text-slate-700" %>
              </div>
            <% end %>

            <div class="pt-2">
              <%= f.submit "メールでログイン",
                    class: "w-full rounded-full bg-indigo-600 py-3.5 text-center text-white font-semibold shadow-lg hover:bg-indigo-500 focus:outline-none focus-visible:ring-4 focus-visible:ring-indigo-300" %>
            </div>
          </div>
        <% end %>

        <div class="mt-6 flex items-center justify-between text-sm">
          <% if devise_mapping.recoverable? %>
            <%= link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "text-slate-600 hover:underline" %>
          <% end %>
          <% if devise_mapping.registerable? %>
            <%= link_to "会員登録", new_registration_path(resource_name), class: "text-slate-600 hover:underline" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
