<% content_for :body_bg, 'bg-slate-700' %>

<main class="min-h-dvh flex items-start justify-center px-4 py-10">
  <div class="w-full max-w-md">

    <div class="w-full rounded-3xl overflow-hidden shadow-xl ring-1 ring-black/5 bg-white/95">
      <%= image_tag "auth/signup-header.jpg",
            alt: "",
            class: "block w-full h-40 sm:h-56 md:h-64 object-cover object-center select-none",
            loading: "eager", fetchpriority: "high" %>

      <div class="px-6 pt-6 pb-2 text-center">
        <h1 class="text-3xl font-extrabold tracking-tight text-slate-900">会員登録</h1>
        <p class="mt-3 text-slate-600">招待状にお書きください。席をご用意しております。</p>
      </div>

      <div class="px-6 pb-6">
        <% if resource.errors.any? %>
          <ul class="mb-3 space-y-1 text-sm text-rose-600">
              <% resource.errors.full_messages.uniq.each do |m| %>
                <li>• <%= m %></li>
              <% end %>
           </ul>
        <% end %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
              <%= f.email_field :email, autocomplete: "email", autofocus: true,
                    class: "mt-1 block w-full rounded-xl border border-slate-300 px-4 py-3 text-[16px] placeholder-slate-400 focus:border-slate-400 focus:outline-none focus:ring-4 focus:ring-slate-200" %>
            </div>
            <div>
              <%= f.label :password, "パスワード(10文字以上、大文字小文字+数字を合わせて記入)", class: "block text-sm font-medium text-slate-700" %>
              <%= f.password_field :password, autocomplete: "new-password",
                    class: "mt-1 block w-full rounded-xl border border-slate-300 px-4 py-3 text-[16px] placeholder-slate-400 focus:border-slate-400 focus:outline-none focus:ring-4 focus:ring-slate-200" %>
            </div>
            <div>
              <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-sm font-medium text-slate-700" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                    class: "mt-1 block w-full rounded-xl border border-slate-300 px-4 py-3 text-[16px] placeholder-slate-400 focus:border-slate-400 focus:outline-none focus:ring-4 focus:ring-slate-200" %>
            </div>

            <fieldset class="space-y-3 pt-1">
              <div class="flex items-start gap-3">
                <%= f.check_box :terms_accepted, required: true,
                      class: "peer mt-1 h-4 w-4 shrink-0 rounded border-slate-300 text-slate-900 focus:ring-slate-300" %>
                <%= f.label :terms_accepted, class: "cursor-pointer select-none text-sm text-slate-700" do %>
                  登録すると、<%= link_to "利用規約", terms_path, class: "underline" %> および
                  <%= link_to "プライバシーポリシー", privacy_path, class: "underline" %> に同意したものとみなされます。
                <% end %>
              </div>

              <div class="flex items-start gap-3">
                <%= f.check_box :age_confirmed, required: true,
                      class: "peer mt-1 h-4 w-4 shrink-0 rounded border-slate-300 text-slate-900 focus:ring-slate-300" %>
                <%= f.label :age_confirmed, "18歳以上です（18歳未満の方は利用できません）",
                      class: "cursor-pointer select-none text-sm text-slate-700" %>
              </div>
            </fieldset>

            <div class="pt-1 flex items-center justify-center gap-4 text-sm">
              <%= link_to "ホームへ戻る", root_path, class: "text-slate-600 hover:underline" %>
              <span class="text-slate-400">|</span>
              <%= link_to "すでにアカウントをお持ちの方はログイン", new_session_path(resource_name), class: "text-slate-600 hover:underline" %>
            </div>

            <div class="pt-1">
              <%= f.submit "次へ進む",
                    class: "w-full rounded-full bg-slate-900 py-3.5 text-center text-white font-semibold hover:bg-slate-800 focus:outline-none focus-visible:ring-4 focus-visible:ring-slate-300" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</main>
