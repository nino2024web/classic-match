<% content_for :body_bg, 'bg-stone-700' %>
<main class="min-h-dvh flex items-start justify-center px-4 py-10">
  <div class="w-full max-w-md">
    <div class="w-full rounded-3xl overflow-hidden shadow-xl ring-1 ring-black/5 bg-white/95">
      <%= image_tag "auth/login-header.jpg", alt: "", class: "block w-full h-40 sm:h-56 md:h-64 object-cover object-center select-none" %>

      <div class="px-6 pt-6 pb-2 text-center">
        <h1 class="text-3xl font-extrabold tracking-tight text-slate-900">パスワード再発行</h1>
        <p class="mt-3 text-slate-600">開演前の最終調整です。もう一度深呼吸しましょう。</p>
      </div>

      <div class="px-6 pb-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-slate-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "mt-1 block w-full rounded-xl border border-slate-300 px-4 py-3 text-[16px] placeholder-slate-400 focus:border-slate-400 focus:outline-none focus:ring-4 focus:ring-slate-200" %>
            </div>

            <div class="pt-2">
              <button class="w-full rounded-full bg-slate-900 py-3.5 text-white font-semibold hover:bg-slate-800 focus-visible:ring-4 focus-visible:ring-slate-300">
                6桁コードを送信
              </button>
            </div>
          </div>
        <% end %>

        <div class="mt-6 mb-4 flex items-center justify-between text-sm">
          <%= link_to "ログインに戻る",new_session_path(resource_name),
              class: "text-slate-600 hover:underline whitespace-nowrap" %>
          <%= link_to "ホームへ戻る",root_path,
              class: "text-slate-600 hover:underline whitespace-nowrap" %>
        </div>
      </div>
    </div>
  </div>
</main>
